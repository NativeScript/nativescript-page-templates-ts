<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd">
    <ActionBar title="Sign up" icon="" class="action-bar">
    </ActionBar>

    <StackLayout class="p-t-15">
        <Button class="btn btn-outline text-left" tap="onSignupFacebookButtonTap">
            <FormattedString>
                <!-- 
                    To see icons you need to add font awesome to your project.
                    Learn more about icon font and how it can be added in this documentation article:
                    https://docs.nativescript.org/ui/icon-fonts
                -->
                <Span text="    &#xf09a;" class="fa"></Span>
                <Span text="     Sign up with Facebook"></Span>
            </FormattedString>
        </Button>

        <Button class="btn btn-outline text-left" tap="onSignupGoogleButtonTap">
            <FormattedString>
                <Span text="    &#xf0d5;" class="fa"></Span>
                <Span text="   Sign up with Google +"></Span>
            </FormattedString>        
        </Button>
        <Label class="m-t-10 text-center" text="or"></Label>

        <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="Name" autocorrect="false" autocapitalization="none" text="{{ name }}"></TextField>
        <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalization="none"
            text="{{ email }}"></TextField>
        <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="Password" secure="true" autocorrect="false" autocapitalization="none"
            text="{{ password }}"></TextField>

        <Button class="btn btn-primary" text="SIGN UP" tap="onSignupButtonTap"></Button>
    </StackLayout>
</Page>